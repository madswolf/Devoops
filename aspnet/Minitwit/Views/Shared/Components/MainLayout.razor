@inherits LayoutComponentBase
@using Minitwit.Models.Entity
@using System.Collections.Generic
@using Microsoft.AspNetCore.Components

<div class=navigation>
    @if (user is not null)
    {
        <a href="timeline">my timeline</a>
        <a href="">public timeline</a>
        <a href="">sign out @user.Username</a>
    }
    else
    {
        <a href="timeline">public timeline</a>
        <a href="">sign up</a>
        <a href="">sign in</a>
    }
</div>

@if (flashes is not null)
{
    <ul class=flashes>
        @foreach (var message in flashes)
        {
            <li> @message.Text </li>
        }
    </ul>
}

<div class=body>
    @Body
</div>

<div class=footer>
    MiniTwit; A Asp.net Application
</div>

